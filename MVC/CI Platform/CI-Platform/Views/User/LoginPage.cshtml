              <div class="lgin">
                <div class="lgdetail">
                  <form method="post">
                       <div>
                        <span class="text-danger">
                            @if(TempData["Usernotfound"] != null)
                            {
                                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                                    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
                                    <script type="text/javascript">
                                    toastr.error('@TempData["Usernotfound"]');
                                    </script>
                            }
                            @if(TempData["Usererror"] != null)
                            {
                                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                                    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
                                    <script type="text/javascript">
                                       @* TempData["Emailerror"]*@
                                     toastr.warning('@TempData["UserError"]');
                                    </script>
                            }
                        </span> 
                        <span>
                        @if(TempData["success"] != null)
                                {
                                    <script src="~/lib/jquery/dist/jquery.min.js"></script>
                                    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
                                    <script type="text/javascript">
                                       @* TempData["Emailerror"]*@
                                     toastr.success('@TempData["success"]');
                                    </script>
                                }
                        </span>
                       </div>
                    <div class="mb-3">
                      <label asp-for="Email" for="exampleInputEmail1" class="form-label">Email address</label>
                      <input asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ravipatel@gmail.com">
                      <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                      <label asp-for="Password" for="exampleInputPassword1" class="form-label">Password</label>
                      <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="**********">
                      <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-secondary" id="lgbtn">Login</button>
                    <p id="forgetpassword"><a id="forpas" asp-controller="User" asp-action="ForgotPassword">Lost Your Password?</a></p>
                    <p id="creatacc">Don’t have an account? <a id="crtac" asp-controller="User" asp-action="RegistrationPage">Create an account</a></p>
